{
    "manifest_version": 2,
    "minimum_chrome_version": "91",
    "name": "TestCord Web",
    "description": "The other cutest Discord mod now in your browser",
    "author": "TestCord",
    "homepage_url": "https://github.com/x2b1/testcord",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.discord.com/*",
        "https://raw.githubusercontent.com/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://*.discord.com/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true,
            "world": "ISOLATED"
        },
        {
            "run_at": "document_start",
            "matches": [
                "*://*.discord.com/*"
            ],
            "js": [
                "dist/Equicord.js"
            ],
            "all_frames": true,
            "world": "MAIN"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "dist/Equicord.js",
        "dist/Equicord.css"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "firefox@equicord.org",
            "strict_min_version": "128.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ],
                "optional": [
                    "authenticationInfo",
                    "locationInfo"
                ]
            }
        }
    }
}